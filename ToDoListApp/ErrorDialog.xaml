<Window x:Class="ToDoListApp.ErrorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoListApp"
        mc:Ignorable="d"
        Title="ErrorDialog" Height="450" Width="800">
    <Grid>
        
            <StackPanel>
                <TextBlock x:Name="ErrorMessageTextBlock" TextWrapping="Wrap" Margin="10" FontSize="14"/>
                <Button Content="OK" Width="75" Height="30" Margin="10" HorizontalAlignment="Center" Click="OkButton_Click"/>
            </StackPanel>
        
    </Grid>
</Window>
